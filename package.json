{
  "name": "vscode-maiascript",
  "displayName": "MaiaScript Language Support",
  "description": "MaiaScript language support for Visual Studio Code",
  "version": "0.1.0",
  "publisher": "Roberto Luiz Souza Monteiro",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "contributes": {
    "languages": [
      {
        "id": "maiascript",
        "aliases": ["MaiaScript", "maiascript"],
        "extensions": [".maia", ".maiascript"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "maiascript",
        "scopeName": "source.maiascript",
        "path": "./syntaxes/maiascript.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "MaiaScript Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/maia-color-theme.json"
      }
    ],
    "snippets": [
      {
        "language": "maiascript",
        "path": "./snippets/maiascript.json"
      }
    ]
  },
  "scripts": {
    "build": "vsce package",
    "install": "code --install-extension vscode-maiascript-0.1.0.vsix"
  },
  "keywords": [
        "maia",
        "maiascript",
        "programming language",
        "scientific computing",
        "artificial intelligence",
        "natural language processing",
        "calculus"
    ],
    "author": "Roberto Luiz Souza Monteiro",
    "license": "Apache-2.0",
    "homepage": "https://www.maiascript.com",
    "bugs": {
        "url": "https://github.com/souzamonteiro/maia-vscode-extension/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/souzamonteiro/maia-vscode-extension.git"
    }
}
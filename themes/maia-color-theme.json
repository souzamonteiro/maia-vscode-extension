{
  "$schema": "vscode://schemas/color-theme",
  "name": "MaiaScript Theme",
  "type": "dark",
  "colors": {
    "editor.background": "#1e1e1e",
    "editor.foreground": "#d4d4d4",
    "editor.lineHighlightBackground": "#2a2a2a",
    "editor.selectionBackground": "#264f78",
    "editor.inactiveSelectionBackground": "#3a3d41",
    "editorCursor.foreground": "#aeafad",
    "editorWhitespace.foreground": "#3b3b3b",
    "editorIndentGuide.background": "#404040",
    "editorIndentGuide.activeBackground": "#707070"
  },
  "tokenColors": [
    {
      "name": "Comments",
      "scope": ["comment", "comment.line.double-slash"],
      "settings": {
        "foreground": "#6a9955",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Strings",
      "scope": "string.quoted.double",
      "settings": {
        "foreground": "#ce9178"
      }
    },
    {
      "name": "Numbers",
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#b5cea8"
      }
    },
    {
      "name": "Keywords - Control Flow",
      "scope": "keyword.control",
      "settings": {
        "foreground": "#c586c0",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Keywords - Declaration",
      "scope": "keyword.declaration",
      "settings": {
        "foreground": "#569cd6",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Keywords - Types",
      "scope": "keyword.type",
      "settings": {
        "foreground": "#4ec9b0",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Keywords - Other",
      "scope": "keyword.other",
      "settings": {
        "foreground": "#9cdcfe"
      }
    },
    {
      "name": "Operators - Assignment",
      "scope": "keyword.operator.assignment",
      "settings": {
        "foreground": "#d4d4d4"
      }
    },
    {
      "name": "Operators - Arithmetic",
      "scope": "keyword.operator.arithmetic",
      "settings": {
        "foreground": "#d4d4d4"
      }
    },
    {
      "name": "Operators - Logical",
      "scope": "keyword.operator.logical",
      "settings": {
        "foreground": "#d4d4d4"
      }
    },
    {
      "name": "Operators - Relational",
      "scope": "keyword.operator.relational",
      "settings": {
        "foreground": "#d4d4d4"
      }
    },
    {
      "name": "Operators - Bitwise",
      "scope": "keyword.operator.bitwise",
      "settings": {
        "foreground": "#d4d4d4"
      }
    },
    {
      "name": "Brackets - Curly",
      "scope": "punctuation.definition.bracket.curly",
      "settings": {
        "foreground": "#ffd700"
      }
    },
    {
      "name": "Brackets - Square",
      "scope": "punctuation.definition.bracket.square",
      "settings": {
        "foreground": "#ffd700"
      }
    },
    {
      "name": "Brackets - Parenthesis",
      "scope": "punctuation.definition.bracket.parenthesis",
      "settings": {
        "foreground": "#ffd700"
      }
    },
    {
      "name": "Namespace name",
      "scope": "entity.name.type.namespace",
      "settings": {
        "foreground": "#4ec9b0",
        "fontStyle": "bold underline"
      }
    },
    {
      "name": "Function name",
      "scope": "entity.name.function",
      "settings": {
        "foreground": "#dcdcaa",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Async modifier",
      "scope": "keyword.declaration.maia:has(\\basync\\b)",
      "settings": {
        "foreground": "#c586c0",
        "fontStyle": "bold italic"
      }
    },
    {
      "name": "Variables",
      "scope": "variable.other",
      "settings": {
        "foreground": "#9cdcfe"
      }
    }
  ]
}